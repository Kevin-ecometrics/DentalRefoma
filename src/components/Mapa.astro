  <script is:inline>
    document.addEventListener("DOMContentLoaded", setupMapToggle);
    document.addEventListener("astro:page-load", setupMapToggle);

    function setupMapToggle() {
      const showMapButton = document.getElementById("showMapButton");
      const mapContainer = document.getElementById("mapContainer");
      const infoContainer = document.getElementById("infoContainer");

      if (showMapButton && mapContainer && infoContainer) {
        const buttonText = showMapButton.querySelector("span");

        // Estado inicial: mapa oculto
        mapContainer.style.height = "0";

        showMapButton.addEventListener("click", function () {
          if (
            mapContainer.style.height === "0px" ||
            mapContainer.style.height === ""
          ) {
            // Abrir mapa
            const infoHeight = infoContainer.offsetHeight;
            mapContainer.style.height = `${infoHeight}px`;
            if (buttonText) {
              buttonText.textContent = this.getAttribute("data-hide-text");
            }
          } else {
            // Cerrar mapa
            mapContainer.style.height = "0";
            if (buttonText) {
              buttonText.textContent = this.getAttribute("data-show-text");
            }
          }
        });

        window.addEventListener("resize", function () {
          if (
            mapContainer.style.height !== "0px" &&
            mapContainer.style.height !== ""
          ) {
            const infoHeight = infoContainer.offsetHeight;
            mapContainer.style.height = `${infoHeight}px`;
          }
        });
      }
    }
  </script>
