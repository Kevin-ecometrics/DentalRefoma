---
const instalaciones = [
  {
    img: "/images/insta1.jpeg",
    title: "Atención Personalizada",
    subtitle:
      "Queremos atenderte a tu tiempo y con espacio. Contamos con instalaciones y equipo de primer nivel.",
    features: [
      "Amplios sillones ergonómicos",
      "Espacios diseñados para tu comodidad",
    ],
  },
  {
    img: "/images/insta2.jpeg",
    title: "Privacidad Garantizada",
    subtitle:
      "Espacios individuales y privados para tu tranquilidad durante cada tratamiento.",
    features: [
      "Cabinas completamente privadas",
      "Tecnología de última generación",
    ],
  },
  {
    img: "/images/insta3.jpeg",
    title: "Tecnología de Vanguardia",
    subtitle:
      "Equipos modernos para diagnósticos precisos y tratamientos efectivos.",
    features: [
      "Rayos X digitales",
      "Escáneres intraorales",
      "Esterilización certificada",
    ],
  },
];
---

<section id="instalaciones" class="cards-section">
  <div class="container">
    <h2 class="section-main-title">Nuestras Instalaciones</h2>
    <p class="section-subtitle">Diseñadas para tu comodidad y seguridad</p>

    <!-- INSTALACIONES -->

    <div class="cards-container">
      {
        instalaciones.map((instalacion, index) => (
          <div class={`diagonal-card ${index % 2 !== 0 ? "reverse" : ""}`}>
            <div class="card-image-part">
              <img
                src={instalacion.img}
                alt={instalacion.title}
                class="card-img"
              />
              <div class="card-overlay" />
            </div>
            <div class="card-content-part">
              <h3 class="card-title">{instalacion.title}</h3>
              <div class="card-divider" />
              <p class="card-text">{instalacion.subtitle}</p>
              <ul class="card-features">
                {instalacion.features.map((feature) => (
                  <li>{feature}</li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>

    <!-- AGENDAR CITA -->

    <div class="cta-container">
      <a href="#contacto" class="cta-button">
        <span>Agendar Cita</span>
        <svg
          viewBox="0 0 24 24"
          width="20"
          height="20"
          stroke="currentColor"
          stroke-width="2"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  :root {
    --primary: #9cc115;
    --primary-light: #e8f5c4;
    --primary-dark: #7a9a12;
    --text-dark: #2e2e2f;
    --text-light: #5a5a5a;
    --white: #ffffff;
    --gray-light: #f5f5f5;
    --carousel-bg: #f8fcec;
    --transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .cards-section {
    padding: 100px 0;
    background-color: var(--white);
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-main-title {
    font-size: 2.8rem;
    color: var(--primary);
    text-align: center;
    margin-bottom: 15px;
    font-weight: 700;
  }

  .section-subtitle {
    font-size: 1.3rem;
    color: var(--text-dark);
    text-align: center;
    max-width: 700px;
    margin: 0 auto 60px;
  }

  .cards-container {
    display: flex;
    flex-direction: column;
    gap: 60px;
    margin-bottom: 60px;
  }

  .diagonal-card {
    display: flex;
    min-height: 400px;
    position: relative;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: var(--transition);
  }

  .diagonal-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
  }

  .diagonal-card.reverse {
    flex-direction: row-reverse;
  }

  .card-image-part,
  .card-content-part {
    width: 50%;
    position: relative;
  }

  .card-image-part::after {
    content: "";
    position: absolute;
    width: 200px;
    height: 100%;
    top: 0;
    right: -100px;
    background: var(--white);
    transform: skewX(-15deg);
    z-index: 1;
  }

  .reverse .card-image-part::after {
    right: auto;
    left: -100px;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(156, 193, 21, 0.3) 0%,
      rgba(156, 193, 21, 0) 100%
    );
    z-index: 1;
  }

  .diagonal-card:hover .card-img {
    transform: scale(1.05);
  }

  .card-content-part {
    padding: 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: var(--white);
    z-index: 2;
  }

  .card-title {
    font-size: 2rem;
    color: var(--primary);
    margin-bottom: 20px;
    font-weight: 600;
  }

  .card-divider {
    width: 60px;
    height: 3px;
    background-color: var(--primary);
    margin: 0 0 25px;
    border-radius: 2px;
  }

  .card-text {
    font-size: 1.1rem;
    color: var(--text-dark);
    line-height: 1.7;
    margin-bottom: 25px;
    font-family: "Archivo Narrcontainer
container
containerow", sans-serif;
  }

  .card-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .card-features li {
    position: relative;
    padding-left: 25px;
    margin-bottom: 12px;
    color: var(--text-dark);
  }

  .card-features li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--primary);
    font-weight: bold;
  }

  .cta-container {
    text-align: center;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: var(--primary);
    color: var(--white);
    padding: 18px 45px;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: var(--transition);
    border: 2px solid var(--primary);
    box-shadow: 0 10px 30px rgba(156, 193, 21, 0.3);
  }

  .cta-button svg {
    margin-left: 10px;
    transition: var(--transition);
  }

  .cta-button:hover {
    background-color: transparent;
    color: var(--primary);
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(156, 193, 21, 0.4);
  }

  .cta-button:hover svg {
    transform: translateX(5px);
  }

  .section-divider {
    margin: 80px 0;
    text-align: center;
  }

  .divider-image {
    max-width: 300px;
    height: auto;
    opacity: 0.8;
    filter: grayscale(100%) brightness(1.2);
  }
</style>
