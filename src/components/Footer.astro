---
interface SocialLink {
  name: string;
  url: string;
  icon: string;
}

const {
  copyright = "© 2023 Dentista Reforma. Todos los derechos reservados.",
  socialLinks = [
    {
      name: "Facebook",
      url: "https://facebook.com/dentistareforma",
      icon: "f",
    },
    {
      name: "Instagram",
      url: "https://instagram.com/dentistareforma",
      icon: "ig",
    },
    {
      name: "Twitter",
      url: "https://twitter.com/dentistareforma",
      icon: "tw",
    },
  ],
} = Astro.props;
---

<footer class="bg-gray-800 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold mb-4">Dentista Reforma</h3>
        <p class="text-gray-300">Paseo de la Reforma 123, CDMX</p>
        <p class="text-gray-300">Lunes a Viernes: 9am - 7pm</p>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Enlaces rápidos</h3>
        <ul class="space-y-2">
          <li>
            <a href="#servicios" class="text-gray-300 hover:text-white"
              >Servicios</a
            >
          </li>
          <li>
            <a href="#about" class="text-gray-300 hover:text-white"
              >Sobre Nosotros</a
            >
          </li>
          <li>
            <a href="#contacto" class="text-gray-300 hover:text-white"
              >Contacto</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Síguenos</h3>
        <div class="flex space-x-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-gray-700 hover:bg-primary w-10 h-10 rounded-full flex items-center justify-center transition-colors"
                aria-label={link.name}
              >
                {link.icon}
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
      <p>{copyright}</p>
    </div>
  </div>
</footer>
